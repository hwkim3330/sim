{
  "name": "simi-agent",
  "version": "1.0.0",
  "description": "AI coding agent with local inference and Claude API - Bun/Node.js",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "simi": "./bin/simi.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
