    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "klatt-syn": "^1.0.7",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "typescript": "^5.3.0"
  }
